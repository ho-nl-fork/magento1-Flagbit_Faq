?>
<div class="page-title">
	<h1><?php echo $this->__('FAQ'); ?></h1>
</div>

<div class="row-fluid">

<?php if ($this->getFaqCollection()->count()): ?>

    <?php if ($this->getCategoryCollection()) : ?>
        <?php foreach ($this->getCategoryCollection() as $category) : ?> <!-- Voor iedere groep (Verzending, Betalen -->
            <span class="span6">
                <dl><?php echo $this->htmlEscape($category->getName()); ?></dl>
                <div class="accordion" id="accordion-FAQ">
                    <?php foreach ($this->getItemCollectionByCategory($category) as $item) : ?> <!-- Voor iedere vraag -->
                        <div class="accordion-group">
                            <div class="accordion-heading">
                                <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion-FAQ" href="#collapse-<?php echo $item->getId() ?>">
                                    <?php echo $this->htmlEscape($item->getQuestion()); ?>
                                </a>
                            </div>
                            <div id="collapse-<?php echo $item->getId() ?>" class="accordion-body collapse in">
                                <div class="accordion-inner">
                                    <?php echo $this->getAnswerHtml($item); ?>
                                </div>
                            </div>
                        </div>
                    <?php endforeach; ?>
                </div>
            </span>
        <?php endforeach; ?>
    <?php endif ?>
<?php endif ?>

</div>