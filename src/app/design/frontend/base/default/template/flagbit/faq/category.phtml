/** @var Flagbit_Faq_Block_Frontend_Category $this */
/** @var Flagbit_Faq_Model_Category $category */
$category = $this->getCategory();
?>
<div class="page-title">
	<h1><?= $this->escapeHtml($category->getName()); ?></h1>
</div>

<div class="faq-detail">
	<div class="faq-content">
        <?php foreach ($category->getItemCollection() as $item): ?>
            <div class="faq-item">
                <?php /** @var Flagbit_Faq_Model_Faq $item */ ?>

                <h4 id="faq-<?= $item->getId();?>"><?= $this->escapeHtml($item->getQuestion()); ?></h4>
                <?php foreach (explode("\n", $this->escapeHtml($item->getAnswer())) as $paragraph): ?>
                    <p><?= $this->renderText($paragraph); ?></p>
                <?php endforeach; ?>
            </div>
        <?php endforeach; ?>
	</div>

    <p><a href="<?= Mage::app()->getStore()->getUrl('faq'); ?>" title="<?= $this->__('Back to the FAQ overview'); ?>"><?= $this->__('Back to the FAQ overview'); ?></a></p>
</div>
